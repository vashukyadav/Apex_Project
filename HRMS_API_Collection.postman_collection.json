              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"salary\": 75000,\n  \"position\": \"Senior Marketing Manager\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/employees/1",
              "host": ["{{base_url}}"],
              "path": ["employees", "1"]
            }
          }
        },
        {
          "name": "Delete Employee",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/employees/1",
              "host": ["{{base_url}}"],
              "path": ["employees", "1"]
            }
          }
        }
      ]
    },
